<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-blue bg-dark">
        @Html.ActionLink("ECommerce", "Index", "ProdutoHome", null, new { @class = "navbar-brand" })

        @Html.ActionLink("Gerenciar Produtos", "Index", "Produto", null, new { @class = "nav-link" })
        @Html.ActionLink("Gerenciar Categorias", "Index", "Categoria", null, new { @class = "nav-link" })
        @Html.ActionLink("Carrinho", "CarrinhoCompras", "ProdutoHome", null, new { @class = "nav-link"})
    </nav>


    <div id="content" class="container" style="margin-top:40px">
        @RenderBody()
    </div>

    <hr style="margin-top:5px" />
    <footer style="text-align:center">
        <p>&copy; @DateTime.Now.Year - Desenvolvido por Andrei Nalevaiko</p>
    </footer>

</body>
</html>
