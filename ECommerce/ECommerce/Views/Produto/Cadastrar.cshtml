
@{
}

@model ECommerce.Models.Produto

<div>
    @using (Html.BeginForm("Cadastrar", "Produto", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {

        <fieldset>
            <legend style="color:black">Cadastro de Produto</legend>

            @Html.ValidationSummary(true, null, new { @class = "text-danger" })

            @Html.LabelFor(model => model.Nome, new { @class = "form-group" })
            <div>
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome" })<br>
                @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Descricao, new { @class = "form-group" })
            <div>
                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @placeholder = "Descrição" })<br>
                @Html.ValidationMessageFor(model => model.Descricao, null, new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Preco, new { @class = "form-group" })
            <div>
                @Html.TextBoxFor(model => model.Preco, new { @class = "form-control", @placeholder = "Preço" })<br>
                @Html.ValidationMessageFor(model => model.Preco, null, new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Categoria, new { @class = "form-group" })
            <div>
                @Html.DropDownList("Categorias", null, " -- SELECIONE -- ", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Categoria, null, new { @class = "text-danger" })<br>
            </div>

            @Html.Label("Imagem do Produto", new { @class = "form-group" })
            <div>
                <input type="file" name="ImagemProduto"/><br>
            </div>

            <input type="submit" class="btn btn-success" value="Cadastrar" />

        </fieldset>
    }
</div>
